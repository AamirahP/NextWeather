pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    stages {
        stage('Install') {
            steps {
                sh 'npm install'
            }
        }
        stage('Debug') {
            steps {
                sh 'pwd'
                sh 'ls -la'
            }
        }
        stage('Testing') {
            steps {
                    sh 'npm test'
                }
            }
       
         stage ('Sonarqube Analysis') {
            steps {
                script {
                    def scannerHome = tool 'SonarQube';
                    withSonarQubeEnv('Aamirah Sonarcloud') {
                        sh "${scannerHome}/bin/sonar-scanner"
                    }
                }
            }
        }
        
        
        stage('Clone and Pull Repository') {
            steps {
                script {
                    sshagent(['Aamirah-ssh']) {
                        sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.91.82.93 "git pull"'
                    }
                }
            }
        }
        stage('Start NextJS app') {
            steps {
                script {
                    sshagent(['Aamirah-ssh']) {
                        sh 'ssh -o StrictHostKeyChecking=no ec2-user@54.91.82.93 "npm install  && sudo npm run dev -- -p 80 -H 0.0.0.0"'
                    }
                }
            }
        }
        
        
    }

}
